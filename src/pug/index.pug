block body
    include ./includes/navbar.pug

    section.section.cover#cover
        .container
            h1.cover__header {punit shah}
            p.cover__lead Developer
            hr.cover__line
            figure.error
                .error__img
                    img(src='img/error.png' alt='Error: ( ‾ʖ̫‾)')
